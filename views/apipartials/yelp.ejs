<% if (restaurantList) { %>
<h1>Since you're hungry...</h1>
<% restaurantList.forEach(restaurant => { %>
<section>
  <img src="<%= restaurant.image_url %>" alt="<%= restaurant.name %>">
  <p><%= restaurant.name %></p>
  <p><%= restaurant.is_closed %></p>
  <p><%= restaurant.rating %></p>
  <p><%= restaurant.price %></p>
  <p><%= restaurant.phone %></p>
  <p><%= restaurant.distance %></p>
  <form action="result/yelp" method="post">
    <input type="hidden" name="id" value="<%= restaurant.id %>">
    <input type="hidden" name="name" value="<%= restaurant.name %>">
    <input type="hidden" name="image_url" value="<%= restaurant.image_url %>">
    <input type="hidden" name="is_closed" value="<%= restaurant.is_closed %>">
    <input type="hidden" name="rating" value="<%= restaurant.rating %>">
    <input type="hidden" name="price" value="<%= restaurant.price %>">
    <input type="hidden" name="distance" value="<%= restaurant.distance %>">
    <button type="submit">Add to Favorite Restaurants</button>
  </form>
</section>
<% }) %>
<% } else { %>
<p>Sorry! We couldn't find you restaurants for this area.</p>
<% } %>